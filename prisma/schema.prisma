generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  duration    Int
  created_at  DateTime @default(now())

  fk_id_teacher String   @unique
  teacher       Teachers @relation(fields: [fk_id_teacher], references: [id])

  modules CoursesModules[]
  @@map("courses")
}

model Modules {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  created_at  DateTime @default(now())

  courses CoursesModules[]
  @@map("modules")
}

model CoursesModules {
  id           String   @id @default(uuid())
  fk_id_course String
  fk_id_module String
  created_at   DateTime @default(now())

  course Courses @relation(fields: [fk_id_course], references: [id])
  module Modules @relation(fields: [fk_id_module], references: [id])

  @@map("courses_modules")
}

model Teachers {
  id     String   @id @default(uuid())
  name   String   @unique
  course Courses?

  @@map("teachers")
}

model Authors {
  id   String @id @default(uuid())
  name String @unique

  books Books[]

  @@map("authors")
}

model Books {
  id   String @id @default(uuid())
  name String @unique

  author_id String
  author    Authors @relation(fields: [author_id], references: [id])

  @@map("books")
}
