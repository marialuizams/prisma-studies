generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  duration    Int
  created_at  DateTime @default(now())

  fk_id_teacher String   @unique
  teacher       Teachers @relation(fields: [fk_id_teacher], references: [id])

  @@map("courses")
}

model Teachers {
  id     String   @id @default(uuid())
  name   String   @unique
  course Courses?

  @@map("teachers")
}
